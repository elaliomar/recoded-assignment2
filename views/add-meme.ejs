<form action="/memes" method="POST" class="meme-form">
  <div class="form-group">
    <!-- Meme Name -->
    <label for="meme-name">Meme Name:</label>
    <input
      type="text"
      id="meme-name"
      name="name"
      class="form-control"
      placeholder="Enter meme name"
      required
    />
  </div>

  <div class="form-group">
    <!-- Meme Price -->
    <label for="meme-price">Meme Price:</label>
    <input
      type="text"
      id="meme-price"
      name="price"
      class="form-control"
      placeholder="Enter meme price"
      required
    />
  </div>

  <div class="form-group">
    <!-- Meme Image URL -->
    <label for="meme-image-url">Image URL:</label>
    <input
      type="url"
      id="meme-image-url"
      name="imgURL"
      class="form-control"
      placeholder="Enter image URL"
      required
    />
  </div>

  <button type="submit" class="btn btn-primary mt-3">Add Meme</button>
</form>
